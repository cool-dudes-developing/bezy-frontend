{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": [
        "src/*",
        "./src/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "dom",
      "es2018.promise"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}